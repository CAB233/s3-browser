{
  "nodeModulesDir": "auto",
  "tasks": {
    "check": "deno run -A npm:astro check",
    "dev": "deno run -A --env-file=.dev.vars npm:astro dev",
    "dev:cloudflare": "deno task build && deno run --allow-env --allow-run --env-file=.dev.vars npm:wrangler pages dev ./dist",
    "build": "deno run -A --env-file=.dev.vars npm:astro build",
    "deploy": "deno run --allow-env --allow-run npm:wrangler deploy"
  },
  "imports": {
    "@astrojs/check": "npm:@astrojs/check@0.9.6",
    "@astrojs/cloudflare": "npm:@astrojs/cloudflare@12.6.12",
    "astro": "npm:astro@5.17.3",
    "s3mini": "npm:s3mini@0.9.1",
    "typescript": "npm:typescript@5.9.3",
    "wrangler": "npm:wrangler@4.66.0"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "include": [
      "astro.config.ts",
      "src/**/"
    ],
    "exclude": [
      "dist/"
    ]
  },
  "lint": {
    "include": [
      "src/"
    ],
    "exclude": [
      "dist/"
    ]
  }
}
